{
  "name": "Toaster",
  "version": "1.0",
  "description": "Toast console errors to web page",
  "manifest_version": 2,
  "web_accessible_resources": ["/src/console-listener.js"],
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "run_at": "document_start",
      "css": ["/src/style.css"],
      "js": ["contentScript.js"]
    }
  ]
}
